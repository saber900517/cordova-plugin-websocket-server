<?xml version="1.0" encoding="utf-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-websocketServer" version="1.0.0">
  <name>websocketServer</name>
  <js-module name="cordova-plugin-websocket-server" src="www/websocketServer.js">
    <clobbers target="cordova.plugins.websocketServer"/>
  </js-module>
  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="websocketServer">
        <param name="android-package" value="cordova-plugin-websocket-server.websocketServer"/>
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"/>
    <source-file src="src/android/websocketServer.java" target-dir="src/cordova-plugin-websocketServer/websocketServer"/>
  </platform>
</plugin>
